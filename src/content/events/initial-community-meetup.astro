---
const { event } = Astro.props;

const speakers = [
  {
    name: "Theis Andatu",
    topic: "Computational Thinking",
    img: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=300&h=300&auto=format&fit=crop", 
    desc: "Focusing on computational patterns to solve problems effectively before coding."
  },
  {
    name: "Fidel Silak",
    topic: "Fundamental JavaScript",
    img: "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=300&h=300&auto=format&fit=crop",
    desc: "Exploring core syntax, data structures, and modern JS concepts for developers."
  }
];

const agenda = [
  { time: "14:30", title: "Re-registration", sub: "Participant arrival & preparation" },
  { time: "15:00", title: "Opening Ceremony", sub: "Welcoming by Jayapura JS Initiators" },
  { time: "15:15", title: "Session 1: Computational Thinking", sub: "Theis Andatu" },
  { time: "15:55", title: "Q&A Session 1", sub: "Interactive Discussion" },
  { time: "16:05", title: "Session 2: Fundamental JavaScript", sub: "Fidel Silak" },
  { time: "16:45", title: "Q&A Session 2", sub: "Interactive Discussion" },
  { time: "16:55", title: "Closing & Group Photo", sub: "Final Documentation" },
  { time: "17:00", title: "Free Networking", sub: "Open discussion with speakers" }
];
---

<article class="max-w-4xl mx-auto px-6 py-12 bg-white transition-colors duration-500">
  
  <header class="border-b-2 border-slate-900 pb-10 mb-12">
    <div class="flex flex-wrap justify-between items-center gap-4 mb-6">
      <div class="flex gap-2">
        <span class="bg-amber-400 text-slate-900 text-[10px] font-black px-3 py-1 uppercase tracking-[0.2em]">
          {event.category || 'Initial Meetup'}
        </span>
        <span class="bg-slate-100 text-slate-600 text-[10px] font-bold px-3 py-1 uppercase tracking-widest border border-slate-200">
          Quota: 25 Seats
        </span>
      </div>
      <div class="flex flex-col items-end text-right">
        <p class="text-slate-900 font-black text-sm uppercase tracking-tighter">Saturday, March 14, 2026</p>
        <p class="text-slate-500 font-bold text-[10px] uppercase tracking-widest">15:00 – 17:00 WIT</p>
      </div>
    </div>

    <h1 class="text-5xl md:text-7xl font-black tracking-tighter text-slate-900 leading-[0.9] mb-8 uppercase">
      Initial Meetup <br/> Jayapura JavaScript
    </h1>

    <div class="grid md:grid-cols-12 gap-8 items-start">
      <div class="md:col-span-7">
        <p class="text-xl text-slate-600 leading-tight mb-6 italic">
          "Building a solid community foundation and aligning perceptions on computational logic and programming basics."
        </p>
        
        <div class="flex items-start gap-4 p-5 bg-slate-50 rounded-2xl border border-slate-200">
          <div class="p-2 bg-amber-400 rounded-lg shadow-lg shadow-amber-400/20">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-slate-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
          </div>
          <div>
            <h4 class="text-xs font-black uppercase text-slate-900 tracking-widest">Venue</h4>
            <p class="text-base font-bold text-slate-700">Socio Culture Cafe</p>
            <p class="text-xs text-slate-500">Jayapura, Papua</p>
          </div>
        </div>
      </div>

      <div class="md:col-span-5 flex flex-col gap-4">
        <a href="https://jayapurajs.org/e/initial-meetup/" target="_blank" class="text-center text-sm font-black bg-slate-900 text-white px-8 py-5 rounded-full hover:bg-amber-500 transition-all transform hover:-translate-y-1 shadow-xl">
          REGISTER NOW →
        </a>
        <p class="text-[9px] text-center text-slate-400 uppercase tracking-widest font-bold">Mandatory for all participants</p>
      </div>
    </div>
  </header>

  <section class="mb-20">
    <h2 class="text-xs font-black uppercase tracking-[0.3em] text-slate-400 mb-8 flex items-center gap-4">
      Speakers <span class="h-px flex-1 bg-neutral-200"></span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      {speakers.map((s) => (
        <div class="group flex gap-5 items-center bg-slate-50/50 p-4 rounded-2xl border border-transparent hover:border-amber-400 transition-all">
          <div class="w-20 h-20 md:w-24 md:h-24 shrink-0 overflow-hidden rounded-full border-2 border-white group-hover:scale-105 transition-all duration-500">
            <img 
              src={s.img} 
              alt={s.name} 
              class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
            />
          </div>
          
          <div class="space-y-1">
            <p class="text-[9px] font-black text-amber-600 uppercase tracking-widest">{s.topic}</p>
            <h3 class="text-xl font-black text-slate-900 leading-none">
              {s.name}
            </h3>
            <p class="text-[11px] text-slate-500 leading-tight">
              {s.desc}
            </p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section class="bg-slate-900 p-8 rounded-[2rem] text-white">
    <div class="flex items-center justify-between mb-10">
      <h2 class="text-xs font-black tracking-[0.4em] uppercase">Event Timeline</h2>
      <span class="text-[10px] font-bold px-3 py-1 border border-slate-700 rounded-full">WIT (East Indonesia Time)</span>
    </div>
    
    <div class="space-y-2">
      {agenda.map((item) => (
        <div class="group flex items-center gap-6 py-4 border-b border-slate-800 last:border-0 hover:translate-x-2 transition-all">
          <span class="font-mono text-xs font-black text-amber-400">{item.time}</span>
          <div class="flex flex-col md:flex-row md:items-center md:justify-between w-full gap-1">
            <h4 class="text-sm font-bold text-white uppercase tracking-tight">{item.title}</h4>
            <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest group-hover:text-slate-200 transition-colors">{item.sub}</p>
          </div>
        </div>
      ))}
    </div>
  </section>
</article>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  article {
    animation: fadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  ::-webkit-scrollbar {
    width: 6px;
  }
  ::-webkit-scrollbar-track {
    background: transparent;
  }
  ::-webkit-scrollbar-thumb {
    background: #e2e8f0;
    border-radius: 10px;
  }
</style>