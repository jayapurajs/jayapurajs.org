<header
  id="page-header"
  x-data="{ 
    mobileNavOpen: false, 
    currentPath: window.location.pathname,
    isScrolled: false,
    closeMobileNav() {
      this.mobileNavOpen = false;
    }
  }"
  x-init="
    window.addEventListener('scroll', () => { isScrolled = window.scrollY > 10 });
    document.addEventListener('astro:after-navigation', () => { 
      currentPath = window.location.pathname; 
      mobileNavOpen = false;
    });
    $watch('mobileNavOpen', value => { 
      document.body.style.overflow = value ? 'hidden' : 'auto' 
    });
  "
  @keydown.escape.window="closeMobileNav"
  :class="isScrolled ? 'border-b border-neutral-200' : ''"
  class="fixed top-0 left-0 right-0 z-50 w-full bg-white py-3"
>
  <div class="mx-auto max-w-[85rem] w-full px-4 sm:px-6 lg:px-8">
    <!-- Main navigation -->
    <nav class="flex items-center justify-between gap-3">
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center group transition-all active:scale-95 outline-none"
      >
        <div class="relative h-10 md:h-12 flex items-center">
          <img
            src="/images/logo/jayapurajs-light-transparent.png"
            class="h-36 w-36"
            alt="Jayapura JavaScript"
          />
        </div>
      </a>

      <!-- Desktop navigation (text only) -->
      <div class="hidden md:flex items-center gap-6">
        <a
          href="/"
          :class="currentPath === '/' ? 'border-b-2 border-yellow-500 text-yellow-500' : 'text-neutral-600 hover:text-yellow-500'"
          class="px-1 py-2 text-sm font-medium"
        >
          Home
        </a>
        <a
          href="/events/"
          :class="currentPath.startsWith('/events') ? 'border-b-2 border-yellow-500 text-yellow-500' : 'text-neutral-600 hover:text-yellow-500'"
          class="px-1 py-2 text-sm font-medium"
        >
          Events
        </a>
        <a
          href="/about/"
          :class="currentPath.startsWith('/about') ? 'border-b-2 border-yellow-500 text-yellow-500' : 'text-neutral-600 hover:text-yellow-500'"
          class="px-1 py-2 text-sm font-medium"
        >
          About
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        @click="mobileNavOpen = !mobileNavOpen"
        type="button"
        class="md:hidden p-2 rounded-lg border border-neutral-200 text-neutral-800 hover:bg-neutral-50 transition-all active:scale-90"
        aria-label="Toggle menu"
        :aria-expanded="mobileNavOpen"
      >
        <svg
          x-show="!mobileNavOpen"
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg
          x-show="mobileNavOpen"
          x-cloak
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </nav>

    <!-- Mobile dropdown menu (with icons) -->
    <div
      x-show="mobileNavOpen"
      x-cloak
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 -translate-y-2"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-2"
      class="md:hidden absolute left-0 right-0 top-full mt-2 mx-4 bg-white rounded-xl border border-neutral-200 overflow-hidden"
    >
      <nav class="flex flex-col p-2 text-sm">
        <!-- Home -->
        <a
          href="/"
          @click="closeMobileNav"
          :class="currentPath === '/' ? 'border-l-4 border-yellow-500 text-yellow-700' : 'text-neutral-700 hover:text-yellow-500'"
          class="flex items-center gap-3 px-4 py-3"
        >
          <span>Home</span>
        </a>

        <!-- Events -->
        <a
          href="/events/"
          @click="closeMobileNav"
          :class="currentPath.startsWith('/events') ? 'border-l-4 border-yellow-500 text-yellow-700' : 'text-neutral-700 hover:text-yellow-500'"
          class="flex items-center gap-3 px-4 py-3"
        >
          <span>Events</span>
        </a>

        <!-- About -->
        <a
          href="/about/"
          @click="closeMobileNav"
          :class="currentPath.startsWith('/about') ? 'border-l-4 border-yellow-500 text-yellow-700' : 'text-neutral-700 hover:text-yellow-500'"
          class="flex items-center gap-3 px-4 py-3"
        >
          <span>About</span>
        </a>
      </nav>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-20 md:h-24"></div>
