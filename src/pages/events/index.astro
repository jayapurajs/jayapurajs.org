---
import Layout from "../../layouts/Layout.astro";
import { events } from "../../data/events";
---

<Layout
  title="Events - Jayapura JavaScript Community"
  description="Discover the latest workshops, meetups, and conferences related to JavaScript in Jayapura."
>
  <main class="relative mx-auto w-full max-w-6xl min-h-screen overflow-hidden px-4 sm:px-6 lg:px-8 bg-white">
    <div class="absolute top-0 left-1/2 -z-10 w-[600px] h-[600px] -translate-x-1/2 rounded-full bg-amber-200/30 blur-[100px] opacity-70 animate-pulse-slow"></div>
    <div class="absolute bottom-0 right-0 -z-10 w-[400px] h-[400px] rounded-full bg-yellow-100/40 blur-[80px]"></div>

    <div class="py-16 text-center">
      <div class="animate-fade-in-up">
        <span class="inline-block py-1 px-3 rounded-full bg-amber-100 text-amber-700 text-xs font-bold tracking-wide uppercase mb-4 border border-amber-200">
          Community Updates
        </span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-gray-900 tracking-tight">
          Upcoming <span class="bg-gradient-to-r from-amber-500 to-yellow-500 bg-clip-text text-transparent">Events</span>
        </h1>
      </div>
    </div>

    <div class="pb-24">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {events.map((event, index) => (
          <div
            class="group relative flex flex-col h-full bg-white border border-gray-100 rounded-2xl shadow-sm hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 overflow-hidden animate-fade-in-up"
            style={`animation-delay: ${index * 150}ms`}
          >
            <div class="relative w-full h-52 sm:h-60 overflow-hidden rounded-t-xl cursor-zoom-in">
              <img
                src={event.image}
                alt={event.title}
                class="event-img w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700 ease-in-out"
                loading="lazy"
                onclick={`openLightbox('${event.image}', '${event.title}')`}
              />
              <div class="absolute inset-0 bg-black/5 pointer-events-none"></div>
              <span class="absolute top-3 left-3 px-2 py-1 text-[10px] font-bold text-amber-900 bg-white/90 backdrop-blur-sm rounded-md shadow-sm uppercase tracking-wider pointer-events-none">
                {event.category}
              </span>
            </div>

            <div class="flex flex-col flex-1 p-6">
              <h3 class="text-xl font-bold text-gray-900 group-hover:text-amber-600 transition-colors mb-2 line-clamp-2 uppercase">
                {event.title}
              </h3>
              <p class="text-gray-600 leading-relaxed mb-6 text-sm line-clamp-2">
                {event.desc}
              </p>
              <div class="mt-auto pt-4 border-t border-gray-100 flex items-center justify-between">
                <div class="flex flex-col">
                  <span class="text-[10px] uppercase text-gray-400 font-bold tracking-widest">Date</span>
                  <span class="text-sm font-bold text-gray-800">{event.date}</span>
                </div>
                <a href={`/events/${event.slug}`} class="inline-flex items-center gap-2 text-sm font-bold text-amber-600 hover:underline">
                  Details
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>

  <div id="lightbox" class="fixed inset-0 z-[100] hidden bg-black/90 backdrop-blur-sm flex items-center justify-center p-4 cursor-zoom-out animate-fade-in" onclick="closeLightbox()">
    <button class="absolute top-6 right-6 text-white hover:text-amber-500 transition-colors" onclick="closeLightbox()">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <img id="lightbox-img" src="" alt="" class="max-w-full max-h-[90vh] rounded-lg shadow-2xl transition-transform duration-300 scale-95" />
  </div>
</Layout>

<script is:inline>
  function openLightbox(src, title) {
    const lightbox = document.getElementById('lightbox');
    const img = document.getElementById('lightbox-img');
    img.src = src;
    img.alt = title;
    lightbox.classList.remove('hidden');
    lightbox.classList.add('flex');
    document.body.style.overflow = 'hidden';
    setTimeout(() => { img.classList.remove('scale-95'); img.classList.add('scale-100'); }, 10);
  }

  function closeLightbox() {
    const lightbox = document.getElementById('lightbox');
    const img = document.getElementById('lightbox-img');
    img.classList.add('scale-95');
    setTimeout(() => {
      lightbox.classList.add('hidden');
      lightbox.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }, 200);
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeLightbox();
  });
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  .animate-fade-in { animation: fadeIn 0.3s ease-out; }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes pulseSlow {
    0%, 100% { opacity: 0.5; transform: translate(-50%, 0) scale(1); }
    50% { opacity: 0.7; transform: translate(-50%, -10px) scale(1.05); }
  }
  .animate-fade-in-up {
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    opacity: 0;
  }
  .animate-pulse-slow {
    animation: pulseSlow 6s ease-in-out infinite;
  }
</style>