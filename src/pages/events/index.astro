---
import Layout from "../../layouts/Layout.astro";
import { events } from "../../data/events";
---

<Layout
  title="Events - Jayapura JavaScript Community"
  description="Discover the latest workshops, meetups, and conferences related to JavaScript in Jayapura."
>
  <main class="relative mx-auto w-full  max-w-6xl min-h-screen overflow-hidden px-4 sm:px-6 lg:px-8">
    <div class="absolute top-0 left-1/2 -z-10 w-[600px] h-[600px] -translate-x-1/2 rounded-full bg-amber-200/30 dark:bg-amber-500/10 blur-[100px] opacity-70 animate-pulse-slow"></div>
    <div class="absolute bottom-0 right-0 -z-10 w-[400px] h-[400px] rounded-full bg-yellow-100/40 dark:bg-yellow-500/10 blur-[80px]"></div>

    <div class="py-16 lg:py-16 text-center">
      <div class="animate-fade-in-up">
        <span class="inline-block py-1 px-3 rounded-full bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400 text-xs font-bold tracking-wide uppercase mb-4 border border-amber-200 dark:border-amber-800">
          Community Updates
        </span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-gray-900 dark:text-white tracking-tight">
          Upcoming <span class="bg-gradient-to-r from-amber-500 to-yellow-500 bg-clip-text text-transparent">Events</span>
        </h1>
        <p class="mt-6 text-lg sm:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
          Stay tuned for workshops, meetups, and tech talks. Connect with fellow developers in Jayapura and level up your JavaScript skills.
        </p>
      </div>
    </div>

<div class="pb-16">
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {events.map((event, index) => (
      <span
        class="group relative flex flex-col h-full bg-white/80 dark:bg-gray-900/60 backdrop-blur-sm border border-gray-100 dark:border-gray-800 rounded-xl shadow-sm hover:shadow-lg hover:shadow-amber-100/40 dark:hover:shadow-amber-900/20 transition-all duration-300 hover:-translate-y-1.5 overflow-hidden animate-fade-in-up max-w-sm mx-auto"
      >
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-amber-400 to-yellow-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>

        <div class="relative overflow-hidden rounded-t-xl">
          <img
            src={event.image}
            alt={event.title}
            class="w-full h-40 object-cover transform group-hover:scale-105 group-hover:rotate-1 transition-transform duration-500"
            loading="lazy"
          />
          <span class="absolute top-2 left-2 px-2.5 py-1 text-[11px] font-semibold text-amber-900 dark:text-amber-200 bg-amber-100/90 dark:bg-amber-900/90 rounded-full shadow-sm">
            {event.category}
          </span>
        </div>

        <div class="flex flex-col flex-1 p-4">
          <h3 class="text-base md:text-lg font-semibold text-gray-800 dark:text-gray-100 group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors mb-2 line-clamp-2">
            {event.title}
          </h3>
          <p class="text-xs md:text-sm text-gray-600 dark:text-gray-400 leading-relaxed mb-4 line-clamp-3">
            {event.desc}
          </p>

          <div class="mt-auto pt-3 border-t border-gray-100 dark:border-gray-800 flex items-center justify-between">
            <div class="flex flex-col">
              <span class="text-[10px] uppercase text-gray-400 dark:text-gray-500 font-bold tracking-wider">Date</span>
              <span class="text-xs md:text-sm font-semibold text-gray-800 dark:text-gray-200">{event.date}</span>
            </div>
            <a  href={`/events/${event.slug}` }
        style={`animation-delay: ${index * 150}ms`}
                >
            <div class="flex items-center gap-1.5 text-xs md:text-sm font-medium text-gray-500 dark:text-gray-400 group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
              <span>Details</span>
              <svg class="w-3.5 h-3.5 transform group-hover:translate-x-1 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </div>
            </a>
          </div>
        </div>
      </span>
    ))}
  </div>
</div>

  </main>
</Layout>

<style>
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes pulseSlow {
    0%, 100% { opacity: 0.5; transform: translate(-50%, 0) scale(1); }
    50% { opacity: 0.7; transform: translate(-50%, -10px) scale(1.05); }
  }
  .animate-fade-in-up {
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    opacity: 0;
  }
  .animate-pulse-slow {
    animation: pulseSlow 6s ease-in-out infinite;
  }
</style>