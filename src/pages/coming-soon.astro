---
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="Coming Soon"
  description="This page is under construction. Stay tuned for updates."
>
  <main class="min-h-screen flex items-center justify-center px-4 bg-white">
    <div class="text-center py-16">
      <!-- Illustration -->
      <div class="mb-8">
        <svg
          class="w-48 h-48 mx-auto text-yellow-400"
          viewBox="0 0 200 200"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <!-- Construction cone -->
          <path d="M100 30L140 150H60L100 30Z" fill="currentColor" opacity="0.2"
          ></path>
          <path
            d="M100 30L140 150H60L100 30Z"
            stroke="currentColor"
            stroke-width="4"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
          <!-- Stripes -->
          <path
            d="M75 110H125"
            stroke="currentColor"
            stroke-width="4"
            stroke-linecap="round"></path>
          <path
            d="M70 130H130"
            stroke="currentColor"
            stroke-width="4"
            stroke-linecap="round"></path>
          <!-- Base -->
          <path
            d="M50 150H150"
            stroke="currentColor"
            stroke-width="4"
            stroke-linecap="round"></path>
          <rect
            x="55"
            y="150"
            width="90"
            height="20"
            rx="4"
            fill="currentColor"
            opacity="0.3"></rect>
          <!-- Sparkles -->
          <circle cx="45" cy="60" r="4" fill="currentColor" opacity="0.5"
          ></circle>
          <circle cx="155" cy="80" r="3" fill="currentColor" opacity="0.5"
          ></circle>
          <circle cx="160" cy="50" r="5" fill="currentColor" opacity="0.3"
          ></circle>
        </svg>
      </div>

      <!-- Header -->
      <h1 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-4">
        Coming Soon
      </h1>

      <!-- Description -->
      <p class="text-neutral-600 max-w-sm mx-auto mb-8">
        We're still working on this page. Check back later or explore other
        parts of our site.
      </p>

      <!-- Back Link -->
      <a
        href="/"
        class="inline-flex items-center gap-2 text-sm font-medium text-yellow-600 hover:text-yellow-700 transition-colors"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Home
      </a>
    </div>
  </main>
</Layout>
